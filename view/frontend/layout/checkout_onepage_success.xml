<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Adyen_Payment::css/adyen.css"/>
        <link src="Adyen_Payment::js/adyen.js"/>
    </head>
    <body>
        <referenceContainer name="order.success.additional.info">
            <block class="Adyen\Hyva\Block\Checkout\Success" name="onepage.success.adyen_hyva_payment"
                   template="Adyen_Hyva::checkout/success.phtml" cacheable="false">
                <arguments>
                    <argument name="magewire" xsi:type="object">Adyen\Hyva\Magewire\Checkout\Success</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
