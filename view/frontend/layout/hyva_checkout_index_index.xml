<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Adyen_Payment::css/adyen.css" />
    </head>
    <body>
        <block name="block-loader" template="Hyva_Theme::ui/loading-block.phtml"/>

        <referenceContainer name="head.additional">
            <block name="adyen.hyva.payment.initialize" template="Adyen_Hyva::payment/init/init.phtml" after="-">
                <block class="Adyen\Hyva\Block\PaymentMethod"
                       name="checkout.payment.method.model.common"
                       as="checkout.payment.method.model.common"
                       template="Adyen_Hyva::payment/model/adyen-payment-method.phtml">
                </block>
            </block>
        </referenceContainer>

        <referenceContainer name="hyva.checkout.init-payment.after">
            <block class="Magento\Framework\View\Element\Template"
                   name="adyen_cc_component"
                   template="Adyen_Hyva::payment/components/adyen-cc-component.phtml"
                   before="-"/>
            <block class="Magento\Framework\View\Element\Template"
                   name="adyen_default_component"
                   template="Adyen_Hyva::payment/components/adyen-default-component.phtml"
                   before="-"/>
            <block class="Magento\Framework\View\Element\Template"
                   name="adyen_applepay_component"
                   template="Adyen_Hyva::payment/components/adyen-applepay-component.phtml"
                   before="-"/>
        </referenceContainer>
    </body>
</page>
